generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id             String           @id @default(uuid())
  name           String
  nickName       String           @map("nick_name")
  documentType   enumDocumentType @map("document_type")
  documentNumber String           @unique @map("document_number")
  active         Boolean
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime?        @updatedAt @map("updated_at")

  users UsersOnTenants[]

  @@map("tenant")
}

enum enumDocumentType {
  CNH
  CPF
  CNPJ

  @@map("enum_document_type")
}

model User {
  id        String    @id @default(uuid())
  firstName String    @map("first_name")
  lastName  String    @map("last_name")
  nickName  String    @map("nick_name")
  email     String    @unique
  password  String
  active    Boolean
  avatarUrl String?   @map("avatar_url") // <--- aqui
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")

  tenants UsersOnTenants[]

  @@map("user")
}

model UsersOnTenants {
  id           String    @id @default(uuid())
  user         User      @relation(fields: [userId], references: [id])
  userId       String    @map("user_id")
  tenant       Tenant    @relation(fields: [tenantId], references: [id])
  tenantId     String    @map("tenant_id")
  owner        Boolean   @default(false)
  role         String
  permissions  Json?     @map("permissions") // JSON com permissÃµes detalhadas
  lastAccessAt DateTime? @map("last_access_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime? @updatedAt @map("updated_at")

  @@unique([userId, tenantId])
  @@map("users_tenants")
}
